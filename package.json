{
  "name": "mubashertrade",
  "productName": "MubasherTrade Plus",
  "version": "1.3.1",
  "description": "MubasherTrade Desktop Application",
  "main": "main.js",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "MTrade-Plus",
        "repo": "Rubix-Desktop-Wrapper"
      }
    ],
    "appId": "com.github.MTrade-Plus.Rubix-Desktop-Wrapper",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "squirrel",
      "icon": "windows-setup/mubasher_trade.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=assets/icons/mac/mubashertrade_global.icns --prune=true --out=release-builds-mac --appBundleId=com.rubix.desktop --osxSign=true",
    "package-win": "electron-packager . MubasherTrade --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/windows/mubasher_trade.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"MubasherTrade\"",
    "create-dmg": "node ./createDMG.js",
    "mac-appstore": "electron-packager . --overwrite --asar --platform=mas --arch=x64 --icon=assets/icons/mac/mubashertrade_global.icns --prune=true --out=release-builds-mac --appBundleId=com.rubix.desktop --app-category-type=public.app-category.finance --osxSign",
    "build-pkg": "productbuild --component 'release-builds-mac/MTrade Plus-mas-x64/Mtrade Plus.app' /Applications ./release-builds-mac/mtrade_plus.pkg --sign '3rd Party Mac Developer Installer: Mubasher Financial Services B.S.C C (E34T28BD3E)'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "build -p always"
  },
  "postinstall": "electron-builder install-app-deps",
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Mubasher",
  "license": "ISC",
  "devDependencies": {
    "electron": "^3.1.9",
    "electron-builder": "^21.1.1",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "electron-builder-squirrel-windows": "^21.1.1",
    "electron-simple-updater": "^1.5.0",
    "electron-log": "^1.3.0",
    "electron-updater": "^4.0.6"
  }
}
